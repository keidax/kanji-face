<layout id="WatchFace">
    <label id="DateLabel"
           x="center"
           y="3"
           font="Graphics.FONT_SYSTEM_LARGE"
           justification="Graphics.TEXT_JUSTIFY_CENTER"
           color="Graphics.COLOR_GREEN" />

    <label id="TimeLabel"
           x="center"
           y="25"
           font="Graphics.FONT_NUMBER_MEDIUM"
           justification="Graphics.TEXT_JUSTIFY_CENTER"
           color="Graphics.COLOR_WHITE" />

    <drawable class="KanjiFaceMoveBar">
      <param name="locX">32</param>
      <param name="locY">142</param>
    </drawable>

    <drawable class="KanjiFaceBattery">
      <param name="locX">147</param>
      <param name="locY">142</param>
    </drawable>

    <label id="KanjiLabel"
           x="center"
           y="bottom"
           font="Graphics.FONT_SYSTEM_LARGE"
           justification="Graphics.TEXT_JUSTIFY_CENTER"
           color="Graphics.COLOR_WHITE" />

    <label id="StatusLabel"
           x="center"
           y="91"
           font="Graphics.FONT_SYSTEM_LARGE"
           justification="Graphics.TEXT_JUSTIFY_CENTER"
           color="Graphics.COLOR_WHITE" />

    <label id="StepsLabel"
           x="180"
           y="99"
           font="Graphics.FONT_SYSTEM_MEDIUM"
           justification="Graphics.TEXT_JUSTIFY_CENTER"
           color="Graphics.COLOR_YELLOW" />

    <label id="HeartRateLabel"
           x="27"
           y="99"
           font="Graphics.FONT_SYSTEM_MEDIUM"
           justification="Graphics.TEXT_JUSTIFY_CENTER"
           color="Graphics.COLOR_RED" />
</layout>
